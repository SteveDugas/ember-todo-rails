<div id="drawer">
  <ul>
  {{#each}}
    {{#view Todos.GroupsGroupView data-id=id}}
      <form>
        {{input type="hidden" value=id}}
        {{input type="text" class="group-edit" value=name}}
      </form>
      {{#view Todos.GroupDeleteView}}
      {{input type="hidden" value=id}}
      <div class="js-delete">x</div>
      {{/view}}
      {{#link-to "todos" this}}{{name}}{{/link-to}}
    {{/view}}
  {{/each}}
    {{#view Todos.GroupsNewView}}
    <li class="new">
      <span>new</span>
      <input type="text" style="display:none">
    </li>
    {{/view}}
  </ul>
</div>
<div id="content">
  {{outlet}}
</div>